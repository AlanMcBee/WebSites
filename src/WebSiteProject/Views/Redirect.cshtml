@inherits UmbracoTemplatePage
@{
    Layout = null;
    var redirectUrl = Umbraco.Field("urlAddress");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <title>(redirect from) @Umbraco.Field("title", altFieldAlias: "pageName") | @Umbraco.Field("siteName", recursive: true)</title>
    <meta http-equiv="refresh" content="0; url=@redirectUrl" />
    <script>
        window.location.href = "@redirectUrl"
    </script>
</head>
<body>
    <p>Redirect to <a href="@redirectUrl">@Umbraco.Field("text")</a></p>
</body>
</html>