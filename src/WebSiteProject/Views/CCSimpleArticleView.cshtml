@using System.Collections
@using Glimpse.Core.Extensions
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "_CodeCharmMasterLayoutTemplate.cshtml";

    var sidebar = Model.Content.GetProperty("showSideBar")?.Value;
    ViewBag.ShowLeftSidebar = sidebar == "left";
    ViewBag.ShowRightSidebar = sidebar == "right";

    ViewBag.TemplateAlias = this.GetType().Name;

}

@section HtmlHeadCss 
{
    <style>
        @Umbraco.Field("cssRules")
    </style>
}

@Html.Partial("Announcements/_announcement")

@Html.Partial("Articles/_article")
