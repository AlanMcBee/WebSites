@helper JQuerySafeCdnLoader()
{
    <script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.4.min.js"></script>
//Fallback to loading jQuery from a local path if the CDN is unavailable
    <script>(window.jQuery || document.write('<script src="@VirtualPathUtility.ToAbsolute("~/scripts/jquery-2.2.4.min.js")"><\/script>'));</script>
}