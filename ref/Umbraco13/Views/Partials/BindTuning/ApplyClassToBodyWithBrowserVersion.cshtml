@{
    // This partial view is used to apply a class to the body tag based on the browser version.

    // This is useful for applying specific styles to specific browsers.

    // first, extract the JavaScript from the embedded resource located at /Resources/ApplyClassToBodyWithBrowserVersion.js
    // then write it to the page as a script tag

    var assembly = typeof(WebSiteProject.Program).Assembly;
    var resourceName = "Resources.BindTuning.ApplyClassToBodyWithBrowserVersion";
    var stream = assembly.GetManifestResourceStream(resourceName);
}
@if (null == stream)
{
    <script>
        console.error("Unable to load resource @resourceName");
    </script>
}
else
{
    using (var reader = new System.IO.StreamReader(stream))
    {
        var script = reader.ReadToEnd();
        <script>
            @Html.Raw(script)
        </script>
    }
}